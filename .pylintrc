[MASTER]
# Nuclear Strictness Configuration
# Comprehensive protection for JARVIS AI codebase
extension-pkg-allow-list=pygame,win32gui,win32api,win32con,pygetwindow,psutil,comtypes,pynput,pythoncom,mediapipe,pyaudio,PIL,struct,cv2,numpy

# Maximum parallelization
jobs=0

[MESSAGES CONTROL]
# Zero-Tolerance Policy: Catching every logical and stylistic issue
disable=
    # External hardware/os noise that cannot be fixed in user code
    no-member, # False positives on dynamic C-extensions often occur
    locally-disabled, # Noise from cleanup
    suppressed-message, # Noise from cleanup
    too-few-public-methods, # Many utility classes have few methods
    broad-exception-caught # Broad exceptions are handled at the agent level

enable=all

[SIMILARITIES]
# Minimum lines of a similarity before it is considered a duplicate.
min-similarity-lines=10
# Ignore comments/docstrings/imports to focus on logic duplication
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[DESIGN]
# Elite standards for code complexity - Adjusted for JARVIS system complexity
max-branches=15
max-statements=60
max-attributes=15
max-locals=20
max-returns=10
max-module-lines=600
max-args=6

[TYPECHECK]
# Suppress specific dynamic attributes for Windows/Pygame stability
generated-members=pygame.*,win32gui.*,win32api.*,win32con.*,IAudioEndpointVolume.*,devices.*,pygetwindow.getWindowsWithTitle,gw.*,pg.*,pythoncom.*

[BASIC]
# Strict naming enforcement with specific assistant aliases
good-names=i,j,k,ex,Run,_,Sir,Jarvis,gw,pg
method-rgx=[a-z_][a-z0-9_]{2,30}$
function-rgx=[a-z_][a-z0-9_]{2,30}$
class-rgx=[A-Z_][a-zA-Z0-9]+$

[FORMAT]
# Standard clean code length
max-line-length=120
expected-line-ending-format=CRLF

[REPORTS]
output-format=colorized
score=yes
