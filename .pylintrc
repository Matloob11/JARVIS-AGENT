[MASTER]
# Nuclear Strictness Configuration - ULTRA STRICT MODE
extension-pkg-allow-list=pygame,win32gui,win32api,win32con,pygetwindow,psutil,comtypes,pynput,pythoncom,mediapipe,pyaudio,PIL,struct,cv2,numpy

jobs=0


[MESSAGES CONTROL]
# NOTHING disabled → everything detected
disable=

enable=all


[SIMILARITIES]
min-similarity-lines=10
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes


[DESIGN]
max-branches=15
max-statements=60
max-attributes=15
max-locals=20
max-returns=10
max-module-lines=600
max-args=6


[TYPECHECK]
# No dynamic member suppression → detect hardware / OS / API issues
generated-members=


[BASIC]
good-names=i,j,k,ex,Run,_,Sir,Jarvis,gw,pg
method-rgx=[a-z_][a-z0-9_]{2,30}$
function-rgx=[a-z_][a-z0-9_]{2,30}$
class-rgx=[A-Z_][a-zA-Z0-9]+$


[FORMAT]
max-line-length=120
expected-line-ending-format=CRLF


[REPORTS]
output-format=colorized
score=yes